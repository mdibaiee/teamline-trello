{
  "name": "teamline-trello",
  "version": "1.7.12",
  "description": "Sync Teamline with your Trello boards",
  "main": "build/index.js",
  "scripts": {
    "test": "mocha test --compilers js:babel/register,js:babel/polyfill -w",
    "test:single": "istanbul cover -x test _mocha -- test --compilers js:babel/register,js:babel/polyfill",
    "test:file": "mocha --compilers js:babel/register,js:babel/polyfill",
    "check-coverage": "istanbul check-coverage --statements 85 --branches 80 --functions 85 --lines 85",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "lint": "eslint src test"
  },
  "config": {
    "ghooks": {
      "pre-commit": "grunt && npm run test:single && npm run check-coverage && npm run lint"
    }
  },
  "keywords": [
    "bolt"
  ],
  "files": [
    "build"
  ],
  "author": "Mahdi Dibaiee <mdibaiee@aol.com> (http://dibaiee.ir/)",
  "license": "MIT",
  "devDependencies": {
    "babel": "5.8.3",
    "babel-eslint": "4.1.6",
    "body-parser": "1.15.0",
    "chai": "3.5.0",
    "codecov.io": "0.1.6",
    "eslint": "1.10.3",
    "eslint-config-airbnb": "4.0.0",
    "express": "4.13.4",
    "ghooks": "1.0.1",
    "grunt": "0.4.5",
    "grunt-babel": "5.0.3",
    "grunt-contrib-clean": "1.0.0",
    "grunt-contrib-watch": "0.6.1",
    "inject-then": "2.0.5",
    "istanbul": "0.4.2",
    "mocha": "2.4.5",
    "teamline": "0.9.7"
  },
  "dependencies": {
    "lodash": "4.3.0",
    "moment": "2.12.0",
    "node-trello": "1.1.2",
    "pify": "2.3.0"
  }
}
